page{
  background-color: #f7f8fa;
}
.input-item {
  display: flex;
  justify-content: flex-start;
  padding: 20rpx;
  border-bottom: 2rpx solid #dedede;
  margin: 10rpx;
  background-color: #FFFFFF;
}

.input-left {
  width: 260rpx;
  font-size: 36rpx;
}

.input-right {
  text-align: right;
  flex-grow: 1;
}

.input-txt {
  text-align: right;
  font-size: 36rpx;
}

.input-txt placeholder {
  text-align: right;
}


.input-image-t {
  display: block;
  font-size: 36rpx;
}

.input-image-c {
  display: flex;
  flex-wrap: wrap;
  background-color: #FFFFFF;
}

.icon-v {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
  border: 2rpx solid #dedede;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-img {
  width: 120rpx;
  height: 120rpx;
}

.sub {
  background: #07264a;
  border-radius: 20rpx;
  color: #fff;
  margin-top: 40rpx;
 display: flex;
justify-content: center;

}

image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 4%;
}



.addicon {
  font-size: 100rpx;
  text-align: center;
  line-height: 80rpx;
  color: #dedede;
  font-weight: 100;
}

.addtext {
  font-size: 28rpx;
  color: #dedede;
  line-height: 50rpx;
}

.add-image, .up-pic image {
  margin-top: 2%;
  margin-left: 2%;
  width: 150rpx;
  height: 150rpx;
  color: #ddd;
  line-height: 95%;
  text-align: center;
  background-color: #fff;
  cursor: pointer;
  border-radius: 10rpx;
}

.picture_list {
  padding-bottom: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.picture_item {
  display: flex;
  flex-direction: column;
  margin: 10rpx;
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  border: 1rpx solid #dedede;
}

.picture_item image {
  width: 150rpx;
  height: 150rpx;
}

.radio-group {
  display: flex;
}

.radio {
  flex: 1;
  margin-right: 10rpx;
  position: static;
}

.radio text {
  margin-left: 10rpx;
}

.input-tet {
  border-top: 2rpx solid #dedede;
  padding-top: 10rpx;
  text-align: left;
  font-size: 36rpx;
  margin-top: 20rpx;
  line-height: 40rpx;
  height: 200rpx;
  width: 100%;
}

.picker {
  text-align: right;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
}
